<h1>new game</h1>
<ul class="list-group list-group-horizontal">
  <% @letters.each do |element| %>
    <li class="list-group-item flex-fill"><%= element.capitalize %></li>
  <% end %>
</ul>
<p class="pt-4">What is the longest word you can find?</p>
<form action="/score" method="post" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="answer" placeholder = "Type word">
  <input type="hidden" name="letters" value="<%= @letters %>">
  <input class="btn btn-primary" type="submit" value="Play!">
</form>
